<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.groupsettledup.GroupSettledUpActivity">

    <ImageView
        android:id="@+id/tv_cancel_group_settle_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/cancel"
        android:tint="@color/dark_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_select_a_balance_to_settle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/select_a_balance_to_settle"
        android:textSize="20sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@+id/tv_cancel_group_settle_up"
        app:layout_constraintStart_toEndOf="@+id/tv_cancel_group_settle_up"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_group_settle_up"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_select_a_balance_to_settle"
        tools:itemCount="10"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/group_settled_up_item" />
</androidx.constraintlayout.widget.ConstraintLayout>