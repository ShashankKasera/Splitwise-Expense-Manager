<!-- res/drawable/curved_top_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Background color -->
        </shape>
    </item>
    <item android:top="-100dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="1000dp" android:topRightRadius="40dp" />
            <solid android:color="#FF5722" /> <!-- Background color matching the previous item -->
        </shape>
    </item>
</layer-list>
